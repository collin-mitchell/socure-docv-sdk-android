<resources>

    <!-- Base application theme. -->
    <style name="LabelScanInfo">
        <item name="android:textColor">@color/textLabel</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="continueButtonStyle">
        <item name="android:textColor">@drawable/button_primary_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="bookingActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    //**********CONFIGURABLE

    <style name="ScannerBackIcon">
        <item name="srcCompat">@drawable/ic_arrow_left</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScannerTitleStep">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ScannerFlashIcon">
        <item name="srcCompat">@drawable/ic_disabled_flash</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerFlashIconOn">
        <item name="srcCompat">@drawable/ic_flash</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerTabStyle">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="ScannerTabItemStyle">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="PassportScannerMaskStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PassportScannerMaskBottomStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PassportScannerMaskBackgroundStyle">
        <item name="android:background">@color/mask_background</item>
    </style>
    <!--<item name="android:background">@drawable/cropper_background</item>-->
    <style name="LicenseScannerMaskStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LicenseScannerMaskStyleEdgeDetected">
        <item name="android:background">@drawable/white_border_background_thick</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LicenseScannerMaskStyleEmpty">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LicenseScannerMaskBackgroundStyle">
        <item name="android:background">@color/mask_background</item>
    </style>

    <style name="LicenseScannerMaskTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ManualButtonStyle">
        <item name="android:src">@drawable/ic_camera_button</item>
    </style>

    <style name="CountDownPhotoCaptureStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MySpinKitStyle" parent="@style/SpinKitView.Large.FadingCircle">
        <item name="SpinKit_Color">@color/orange</item>
    </style>

    <style name="HelpBubbleStyle">
        <item name="bl_bubbleColor">@color/green</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="HelpBubbleFont">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NoBarCodeStyle">
        <item name="android:background">@color/red</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="NoBarCodeTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="NoBarCodeButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="scannerBG">
        <item name="android:background">@color/transparent_scanner2</item>
    </style>
    <style name="ScannerStatusBarCapture">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArrowUpIcon">
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_arrow_up</item>
    </style>

    <style name="LicenseBackHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseBackHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseBackHelpImage">
        <item name="android:src">@drawable/license_mask_back</item>
    </style>

    <style name="LicenseFrontHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseFrontHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseFrontHelpImage">
        <item name="android:src">@drawable/license_mask_front</item>
    </style>

    <style name="PassportHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PassportHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PassportHelpImage">
        <item name="android:background">@drawable/passport_mask</item>
    </style>

    <style name="SelfieHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelfieHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelfieHelpImage">
        <item name="android:background">@drawable/ic_selfie_closer</item>
    </style>

    <style name="CardViewHelpStyle">
        <item name="android:background">@drawable/bottom_card_background</item>
    </style>

    <style name="UploadScreen">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ProgressBarValueStyle">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">31sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progress">1</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:progressTint">@color/orange</item>
        <item name="android:secondaryProgressTint">@color/orange</item>
        <item name="android:secondaryProgressTintMode">screen</item>
    </style>

    <style name="PreviewStart">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreviewStart.AcceptImage">
        <item name="android:background">@drawable/button_yes_selector</item>
    </style>

    <style name="PreviewStart.CancelImage">
        <item name="android:background">@drawable/button_no_selector</item>
    </style>

    <style name="PreviewStart.InformationExtracted">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="Widget.AppCompat.ProgressBar.Circle" >
        <item name="android:indeterminateTint">@color/orange</item>
    </style>

    <style name="SelfieMask">
        <item name="android:src">@drawable/ic_selfie_mask</item>
    </style>
    //****** CONFIGURABLE

</resources>
